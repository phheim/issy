name:                issy
version:             1.0.0.0
license:             PublicDomain
build-type:          Simple
cabal-version:       >=1.10

library

  ghc-options:
    -Wall
    -Wno-name-shadowing
    -Wno-x-partial
    -Werror
    -Wwarn=unused-imports
    -Wwarn=unused-matches
    -Wwarn=unused-top-binds
    -Wwarn=unused-local-binds
    -Wwarn=unused-pattern-binds
    -Wwarn=type-defaults
    -fno-ignore-asserts
